{
    "app-id": "io.github.babaissarkar.ssplot",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": "org.freedesktop.Sdk.Extension.openjdk17",
    "command": "ssplot",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=host:rw"
    ],
    "modules": [
        {
            "name": "openjdk17",
            "buildsystem": "simple",
            "build-commands": [
                "/usr/lib/sdk/openjdk17/install.sh"
            ]
        },
        {
            "name": "SSPlot",
            "buildsystem": "simple",
            "builddir": true,
            "sources": [
                {
                    "type": "file",
                    "path": "https://raw.githubusercontent.com/babaissarkar/ssplot/master/jar/SSPlot.jar",
                    "dest-filename": "ssplot.jar"
                }
            ],
            
            "build-commands": [
                 "cp ssplot.jar $FLATPAK_DEST",
                 "install -Dm644 io.github.babaissarkar.ssplot.metainfo.xml -t $FLATPAK_DEST/share/metainfo",
                 "install -Dm644 io.github.babaissarkar.ssplot.desktop -t $FLATPAK_DEST/share/applications",
                 "install -Dm755 ssplot $FLATPAK_DEST/bin/ssplot"
            ]
        }
    ]
}
